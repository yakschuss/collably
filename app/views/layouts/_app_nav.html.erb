<div class="container">
  <ul class="nav nav-tabs">
    <li><%= link_to "Collably", root_path %></li>
    <% if current_user %>
      <li><%= link_to "#{current_user.first_name}'s Dashboard", user_path(current_user), :class => 'navbar-link' %></li>
      <% end %>
    <div class="pull-right user-info">
      <% if current_user %>
      <div class="pull-right">
      <% if current_user.unread_messages? %>
