<h1><%= @user.first_name %> <small><%= @user.email %></small></h1>


<br>
<br>
<div class="container">
    <div class="col-md-12">
      <% @user.accepted_events.each do |event| %>
        <%= render partial: "events/event", locals: {event: event} %>
      <% end %>
    </div>
    <div class="col-md-12">
      <% @user.pending_events.each do |event| %>
        <%= render partial: "events/event", locals: {event: event} %>
      <% end %>
    </div>
</div>

<div class="col-md-4 row">
  <%= link_to "New Event", new_event_path, class: "btn btn-success" %>
</br>
</div>
