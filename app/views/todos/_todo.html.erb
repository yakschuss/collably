<%= content_tag :li, class: "list-group-item", id: "todo-#{todo.id}" do %>
    <span class=" badge delete-todo">
        <%= link_to "", event_todo_path({event_id: @event.id, id: todo.id}),remote: true,  method: :delete, class: 'glyphicon glyphicon-ok' %>
    </span>
        <div class="todo-name">
            <%= todo.name %>
        </div>
    </li>
<% end %>
